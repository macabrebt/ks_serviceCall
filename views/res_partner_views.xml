<odoo>
        <!--
        Partners Extension
        -->
        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                    <page name="internal_notes" position="before">
                        <page string="Service Calls" name="service_calls">
                            <group>
                                <field name="service_call_ids" nolabel="0" context="{'default_owner' : active_id}">
                                    <tree string="Service Calls" editable="bottom">
                                        <field name="call_date"/>
                                        <field name="ks_product_type" widget="many2one_tags"/>
                                        <field name="contact_method"/>
                                        <field name="service_term"/>
                                        <field name="description"/>
                                        <field name="call_status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </page>
            </field>
        </record>
</odoo>