<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='action_sst_serviceCalls' model='ir.actions.act_window'>
        <field name="name">Service Calls</field>
        <field name="res_model">sst.serviceCall</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a service call in sst app
          </p><p>
            SST app helps you to easily track all service calls related to a customer.
          </p>
        </field>
    </record>

    <record id="view_all_serviceCalls_kanban" model="ir.ui.view">
        <field name="name">Service Calls</field>
        <field name="model">sst.serviceCall</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="callDate"/>
                <field name="productType" widget="many2one_tags"/>
                <field name="contactMathod"/>
                <field name="serviceTerm"/>
                <field name="description"/>
                <field name="callStatus"/>
                <field name="shipment"/>

                <field name="owner" widget="many2one_tags"/>
                <field name="notes"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div>
                                <strong>Date:</strong> <field name="callDate"/>
                            </div>
                            <div>
                                <strong>Product Type:</strong> <field name="productType"/>
                            </div>
                            <div>
                                <strong>Contact Mathod:</strong> <field name="contactMathod"/>
                            </div>
                            <div>
                                <strong>Service Term:</strong> <field name="serviceTerm"/>
                            </div>
                            <div>
                                <strong>Description:</strong> <field name="description"/>
                            </div>
                            <div>
                                <strong>Status:</strong> <field name="callStatus"/>
                            </div>
                            <div>
                                <strong>Shipment:</strong> <field name="shipment"/>
                            </div>
                            <div>
                                <strong>Note:</strong> <field name="notes"/>
                            </div>
                            <div>
                                <strong>Owner:</strong> <field name="owner"/>
                            </div>
                            <div>
                                <strong>Created on:</strong> <field name="create_date"/>
                            </div>
                            <div>
                                <strong>Created by:</strong> <field name="create_uid"/>
                            </div>
                         </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_all_serviceCalls_tree" model="ir.ui.view">
        <field name="name">All Service Calls</field>
        <field name="model">sst.serviceCall</field>
        <field name="arch" type="xml">
            <tree>
                <field name="callDate"/>
                <field name="productType" widget="many2one_tags"/>
                <field name="contactMathod"/>
                <field name="serviceTerm"/>
                <field name="description"/>
                <field name="callStatus"/>
                <field name="shipment"/>

                <field name="owner" widget="many2one_tags"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="view_all_serviceCalls_form" model="ir.ui.view">
        <field name="name">All Service Calls</field>
        <field name="model">sst.serviceCall</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="callDate"/>
                        <field name="productType" widget="many2one_tags"/>
                        <field name="contactMathod"/>
                        <field name="serviceTerm"/>
                        <field name="description"/>
                        <field name="callStatus"/>
                        <field name="shipment"/>
                    </group>
                    <group>
                        <field name="owner" widget="many2one_tags"/>
                        <field name="create_date"/>
                        <field name="create_uid" widget="many2one_tags"/>
                        <field name="write_date"/>
                        <field name="write_uid" widget="many2one_tags"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="sst_serviceCall_producttype_tree_view" model="ir.ui.view">
        <field name="name">Product Type</field>
        <field name="model">sst.serviceCall.producttype</field>
        <field name="arch" type="xml">
            <tree>
                <field name="producttype"/>
            </tree>
        </field>
    </record>

    <record id='action_sst_serviceCall_producttype' model='ir.actions.act_window'>
        <field name="name">Type</field>
        <field name="res_model">sst.serviceCall.producttype</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sst_serviceCall_producttype_tree_view"/>
    </record>

    <menuitem id="menu_serviceCall_top_level" name="serviceCalls" web_icon="sst_serviceCall,static/description/icon.png"/>
    <menuitem id="menu_sst_serviceCalls" parent="menu_serviceCall_top_level" action="action_sst_serviceCalls" sequence="2" groups="" />

    <menuitem id="menu_sst_serviceCall_config"
        name="Configuration"
        parent="menu_serviceCall_top_level"
        groups="base.group_system"
        sequence="2"/>
	
    <menuitem id="menu_sst_serviceCall_producttype"
        action="action_sst_serviceCall_producttype"
        name="serviceCall Type" parent="menu_sst_serviceCall_config"
        sequence="1"/>

    <!-- Search View -->
    <record id="sst_serviceCall_view_search" model="ir.ui.view">
        <field name="name">Service Call Search</field>
        <field name="model">sst.serviceCall</field>
        <field name="arch" type="xml">
            <search>
                <field name="callDate"/>
                <field name="productType"/>
                <field name="contactMathod"/>
                <field name="serviceTerm"/>
                <field name="description"/>
                <field name="callStatus"/>
                <field name="shipment"/>
                <field name="owner"/>
                <field name="notes"/>
            </search>
        </field>
    </record>


</odoo>
